<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pedro.emotvote.MainActivity">

    <TextView
        android:id="@+id/textView_valor"
        android:layout_width="210dp"
        android:layout_height="71dp"
        android:layout_marginTop="35dp"
        android:text="0"
        android:max="100"
        android:textAlignment="center"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="323dp"
        android:layout_height="34dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="41dp"
        android:max="100"
        android:progress="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/imageView_coracaoNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/heart_normal"
        android:src="@mipmap/heart_normal"
        android:visibility="invisible"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_valor" />

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/imageView_coracaoRapido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="39dp"
        android:background="@mipmap/heart_fast2"
        android:src="@mipmap/heart_fast2"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_valor" />

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/imageView_coracaoLento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="39dp"
        android:background="@mipmap/heart_slow"
        android:src="@mipmap/heart_slow"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_valor" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="408dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@mipmap/stage"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView_coracaoRapido"
        android:layout_height="321dp"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteY="336dp"
        tools:layout_editor_absoluteX="3dp" />

</android.support.constraint.ConstraintLayout>
